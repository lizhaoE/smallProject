/* pages/index/camera/camera.wxss */
page{
  background-color: #000000;
  width:100%;
  height:100%;
}
.tools{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.flash{
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 35px;
  height: 35px;
}
.save{
  margin-top: 20rpx;
  margin-right: 20rpx;
  width: 23px;
  height: 23px;
}
.bottom_button{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  height: 20%;
  width: 100%;
}
.bottom_button text{
  color: white;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.takePhotoPic{
  box-shadow: 0px 0px 0px 2px rgb(232, 232, 235);
  width: 150rpx;
  height:150rpx;
  border-radius: 75rpx;
}