/* pages/history/history.wxss */

.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 2px;
}
.title{
  margin-top: 30rpx;
  box-shadow:0px 2px 5px 5px rgb(232, 232, 235);
  border-radius: 15px;
  text-align: center;
  background-color: #009688;
  font-size: 28rpx;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.point{
  font-size: 20rpx;
  color: black;  
}

.container_from_success{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding-bottom: 30rpx;
}
.container_grip{
  box-shadow:0px 2px 5px 5px rgb(232, 232, 235);
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 30rpx;
  width: 650rpx;
  background-color: #F7F7FA;
}
.image_style{ 
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 320rpx;
  width: 320rpx;
}
.image{
  box-shadow:0px 2px 5px 5px rgb(232, 232, 235);
  height: 300rpx;
  width:300rpx;
  border-radius: 150rpx;
}
.text_brief{
  width: 550rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.name{
  text-align:center; 
  width: 550rpx;
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.text{
  width: 550rpx;
  font-size: 28rpx;
}
.relation_flower{
  text-align:center; 
  width: 550rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  flex-wrap: true;
  flex-flow: row wrap;
  
}
  