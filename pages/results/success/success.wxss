
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding-bottom: 30rpx;
}
.container_grip{
  box-shadow:0px 2px 5px 5px rgb(232, 232, 235);
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 30rpx;
  width: 650rpx;
  background-color: #F7F7FA;
  padding-bottom: 20px;
  padding-top: 20px;
}
.image_style{ 
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  width: 300rpx;
}
.image{
  box-shadow:0px 2px 5px 5px rgb(232, 232, 235);
  height: 300rpx;
  width:300rpx;
  border-radius: 150rpx;
}
.text_brief{
  width: 550rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.name{
  text-align:center; 
  width: 550rpx;
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.text{
  width: 550rpx;
  font-size: 28rpx;
}
.relation_flower{
  text-align:center; 
  width: 550rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  flex-wrap: true;
  flex-flow: row wrap;
  
}
  